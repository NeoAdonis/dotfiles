{
  "$schema": "https://raw.githubusercontent.com/JanDeDobbeleer/oh-my-posh/main/themes/schema.json",
  "version": 3,
  "final_space": true,
  "console_title_template": "{{ if .Root }}root | {{ end }}{{ .PWD }}",
  "blocks": [
    {
      "type": "prompt",
      "alignment": "left",
      "segments": [
        {
          "type": "session",
          "style": "plain",
          "foreground": "green",
          "foreground_templates": [
            "{{ if .Root }}red{{ end }}"
          ],
          "template": "{{ if .SSHSession }}[SSH] {{ end }}{{ .UserName }}@{{ .HostName }}"
        },
        {
          "type": "text",
          "style": "plain",
          "foreground": "white",
          "template": ":"
        },
        {
          "type": "path",
          "style": "plain",
          "foreground": "blue",
          "template": "{{ .Path }}",
          "properties": {
            "style": "full"
          }
        },
        {
          "type": "git",
          "style": "plain",
          "foreground": "magenta",
          "template": " ({{ .HEAD }}{{ if .Working.Changed }}*{{ end }})",
          "properties": {
            "fetch_status": true
          }
        },
        {
          "type": "status",
          "style": "plain",
          "foreground": "green",
          "foreground_templates": [
            "{{ if ne .Code 0 }}red{{ end }}"
          ],
          "template": " [{{ if eq .Code 0 }}+{{ else }}X {{ reason .Code }}{{ end }}]",
          "properties": {
            "always_enabled": true
          }
        }
      ]
    },
    {
      "type": "prompt",
      "alignment": "left",
      "newline": true,
      "segments": [
        {
          "type": "text",
          "style": "plain",
          "foreground": "white",
          "foreground_templates": [
            "{{ if .Root }}red{{ end }}"
          ],
          "template": "{{ if .Root }}#{{ else }}${{ end }} "
        }
      ]
    }
  ],
  "secondary_prompt": {
    "template": "> ",
    "foreground": "white",
    "background": "transparent"
  }
}
